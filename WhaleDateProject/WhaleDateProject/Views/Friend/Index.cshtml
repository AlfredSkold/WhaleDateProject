@model IEnumerable<Data.Models.Friend>

@{
    ViewBag.Title = "Index";
}

<h2>Kontaktlista</h2>

<p>
    @Html.ActionLink("Lägg till", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AddedUser.Surname) @Html.DisplayFor(modelItem => item.AddedUser.Lastname)
        </td>
        <td>
            @Html.ActionLink("Profil", "Index", new { id = item.Id }) |
            @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })|
        </td>
    </tr>
}

</table>
