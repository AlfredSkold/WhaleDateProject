@model WhaleDateProject.Models.RegisterViewModel
@using WhaleDateProject.Models
@{
    /**/

    /**/

    ViewBag.Title = "Register";
}

<h2>Ny användare</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Skapa ett nytt konto.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Lösenord", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, "Lösenord", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Firstname, "Förnamn", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Lastname, "Efternamn", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Type, "Typ av val", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age, "Ålder", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender, "Jag är", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @{
                List<SelectListItem> genderListItems = new List<SelectListItem>();
                genderListItems.Add(new SelectListItem
                {
                    Text = "Hona",
                    Value = "Hona"
                });
                genderListItems.Add(new SelectListItem
                {
                    Text = "Hane",
                    Value = "Hane",
                });
                genderListItems.Add(new SelectListItem
                {
                    Text = "Annan",
                    Value = "Annan"
                });
            }

            @Html.DropDownListFor(model => model.Gender, genderListItems)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.InterestedIn, "Letar efter", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Hona",
                    Value = "Hona"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Hane",
                    Value = "Hane",
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Annat",
                    Value = "Annan"
                });
            }

            @Html.DropDownListFor(model => model.InterestedIn, listItems)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrera" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}