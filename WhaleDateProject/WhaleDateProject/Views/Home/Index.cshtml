
@model IEnumerable<Data.Models.ApplicationUser>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Rätt Val</h1>
    <p class="lead">Rätt Val är datingsidan för dig som är redo att träffa någon att ge sig ut på djupare vatten med</p>
    <p><a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg">Registrera dig med detsamma! &raquo;</a></p>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        var userProfile = item.Id;

        <div class="col-sm-4">
            <div class="col-sm-10">
                <a href="@Url.Action("Profile", "Profile", routeValues: new { username = item.UserName })">
                    <img class="img-rounded img-responsive" src="@Url.Action("Image", "Profile", new { username = item.UserName })" />
                </a>
            </div>
            <div class="col-sm-10">
                <h4>@item.Firstname @item.Lastname</h4>
                <p>@item.Firstname är en av alla lyckliga valar som hittat kärleken via oss. Registrera dig idag och hitta kärleken precis som @item.Firstname har gjort!</p>
                @Html.ActionLink("Gå till " + item.Firstname + "s profil", "Profile", "Profile", routeValues: new { username = item.UserName }, htmlAttributes: new { title = "Profil" })

            </div>
        </div>
    }
</div>
